<%- include('partials/header') %>

  <!-- Inicio NavBar -->
  <div class="w-full bg-black">
    <nav class="max-w-[1300px] h-[90px] mx-auto px-4 flex justify-between items-center text-white">
      <a href="/" class="flex hover:cursor-pointer">
        <p class="text-2xl">alta<span class="text-3xl text-red-500">GAMA</span>cars</p>
      </a>    
      <p class="text-2xl font-bold text-white">Bienvenido/a <%= user.nombre  %></p>      
      <ul class="flex items-center mr-2 space-x-4">
        <li class="w-[45px] h-[45px] relative group">
          <img class="border-2 border-red-500 hover:border-white duration-300 z-20 w-full h-full rounded-full object-cover hover:cursor-pointer" 
              src="<%= user.foto %>" alt="User Image">
            
          <ul class="bg-black text-white absolute right-0  w-[120px] rounded-lg  border-b border-l border-r border-white overflow-hidden  hidden group-hover:block duration-300">
            <li class="py-1 text-lg font-bold hover:cursor-pointer px-2 hover:bg-red-500">
              <a href="/">Inicio</a>
            </li>
            <li class="py-1 text-lg font-bold hover:cursor-pointer px-2 hover:bg-red-500">
              <a href="/api/carrito">Mi Carrito</a>
            </li>
            <li class="pb-1 text-lg font-bold hover:cursor-pointer px-2 hover:bg-red-500">              
              <a href="/api/compras/myCompras">Mis Compras</a>
            </li>
            <% if (user.isAdmin === 'S') { %>
              <li class="pb-1 text-lg font-bold hover:cursor-pointer px-2 hover:bg-red-500 flex items-center space-x-2">                
                <img class="w-[23px] object-cover" src="/assets/aaa.png" 
                  alt="Settings Icon">
                <p>Admin</p>
              </li>
            <% } %>
            <li class="pb-1 text-lg font-bold hover:cursor-pointer px-2 hover:bg-red-500">
              <a href="/logout">Logout</a>
            </li>            
          </ul>  
        </li>               
      </ul>        
    </nav>
  </div>
  <!-- Fin NavBar --> 

  <div class="max-w-[1350px] mt-6 mx-auto  px-4 "> 

    <% if (user.isAdmin === 'S') { %>     
      <div class="w-full text-center pb-3">
        <p class="text-3xl font-bold uppercase pb-2 text-white">mensajes de usuarios</p> 
      </div>
  
      <div class="w-full flex space-x-4">      
        <div class="w-[15%] h-[calc(100vh-200px)] border-2 rounded-lg shadow-xl flex flex-col px-3 py-2">
          <p class="text-center text-white text-2xl uppercase font-bold">Usuarios</p>
          <div class="w-full h-[2px] bg-red-500 mb-3"></div>
  
          <div class="text-white text-xl uppercase ">
            <p class="p-1 hover:bg-red-500 hover:cursor-pointer">Juan</p>
            <p class="p-1 hover:bg-red-500 hover:cursor-pointer">Pedro</p>
            <p class="p-1 hover:bg-red-500 hover:cursor-pointer">Alvaro</p>
          </div>
        </div>
  
        <div class="flex-1 border-2 text-center rounded-lg shadow-xl ">
          <input id="input_msj" class="w-[300px]" type="text" placeholder="Mensaje (ENTER para enviar)">
        </div>
      </div> 
    <% } else { %>
      <div class="w-full text-center pb-3">
        <p class="text-3xl font-bold uppercase pb-2 text-white">haznos saber tus dudas</p> 
      </div>

      <div class="w-full h-[calc(100vh-200px)] border-2 rounded-xl flex flex-col overflow-hidden">
        <div id="msj_list" class="flex-1 p-2"></div>

        <div class="w-full">
          <p id="user_id" class="hidden"><%= user._id %></p>
          <input class="w-full px-2 py-3 text-lg outline-none" type="text" name="msj_usr" id="msj_usr" placeholder="Mensaje (ENTER para enviar)">
        </div>
      </div>
    <% } %>  
    
  </div>

  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/socket.io/socket.io.js"></script> 
  <script src="/js/chat.js"></script>   
  </body>
</html>